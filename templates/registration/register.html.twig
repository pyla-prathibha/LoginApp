{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Create an Account</h2>
            <div class="card p-4 shadow-sm">
                {{ form_start(registrationForm) }}

                {# Email Field #}
                <div class="mb-3">
                    {{ form_label(registrationForm.email, 'Email', {'class': 'form-label'}) }}
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                {# Password Field #}
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'class': 'form-label'}) }}
                    {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                {# Role Dropdown #}
                <div class="mb-3">
                    {{ form_label(registrationForm.role, 'Select Role', {'class': 'form-label'}) }}
                    {{ form_widget(registrationForm.role, { 'attr': {'class': 'form-select'} }) }}
                    {{ form_errors(registrationForm.role) }}
                </div>

                {# Terms and Conditions #}
                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        I agree to the terms
                    </label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                {# CSRF Token for Security #}
                {{ form_widget(registrationForm._token) }}

                {# Submit Button #}
                <button type="submit" class="btn btn-primary w-100">Register</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
